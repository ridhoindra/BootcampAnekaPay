
<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>CRUD</title>
</head>

<body>
    <a href="/pegawai/tambah"><button>Tambah</button></a>
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>Nama</th>
                <th>Usia</th>
                <th>Keahlian</th>
                <th>Jabatan</th>
                <th>created_at</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((data)=>{%>
            <tr>
                <td><%- data._id %></td>
                <td><%- data.nama %></td>
                <td><%- data.usia %></td>
                <td><%- data.keahlian %></td>
                <td><%- data.jabatan %></td>
                <td><%- data.created_at %></td>
                <td><a href="/pegawai/edit/<%= data._id %>"><button>Edit</button></a>
                    <a href="/pegawai/delete/<%= data._id %>"><button>Delete</button></a></td>
            </tr>
            <% }); %>
        </tbody>
    </table>

</body>

</html>